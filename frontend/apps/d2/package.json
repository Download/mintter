{
  "name": "@mintter/electron",
  "private": true,
  "version": "0.1.0",
  "type": "module",
  "main": "dist/main/index.cjs",
  "scripts": {
    "build:main": "tsc -p packages/main/tsconfig.json --noEmit && vite build packages/main",
    "build": "yarn build:renderer && yarn build:preload && yarn build:main",
    "dev:renderer": "vite packages/renderer",
    "build:renderer": "tsc -p packages/renderer/tsconfig.json --noEmit && vite build packages/renderer",
    "build:preload": "tsc -p packages/preload/tsconfig.json --noEmit && vite build packages/preload",
    "start": "electron .",
    "dev": "cross-env NODE_ENV=development ts-node --esm scripts/dev-server.ts",
    "preview": "vite preview"
  },
  "dependencies": {
    "react": "18.2.0",
    "react-dom": "18.2.0"
  },
  "devDependencies": {
    "@types/react": "18.0.37",
    "@types/react-dom": "18.0.11",
    "@vitejs/plugin-react": "3.1.0",
    "cross-env": "7.0.3",
    "electron": "24.1.2",
    "ts-node": "10.9.1",
    "typescript": "4.9.5",
    "vite": "4.3.1"
  }
}
