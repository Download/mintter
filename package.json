{
  "name": "mintter",
  "private": true,
  "scripts": {
    "lint": "turbo lint --continue -- --cache --cache-location 'node_modules/.cache/.eslintcache'",
    "lint:fix": "turbo lint --continue -- --fix --cache --cache-location 'node_modules/.cache/.eslintcache'",
    "format": "turbo format --continue -- --cache --cache-location='node_modules/.cache/.prettiercache'",
    "format:fix": "turbo format --continue -- --write --cache --cache-location='node_modules/.cache/.prettiercache'",
    "test": "APP_FOLDER_NAME=Mintter.test && turbo test --continue",
    "validate": "yarn lint && yarn format",
    "validate:fix": "yarn lint:fix && yarn format:fix",
    "site": "yarn workspace @mintter/site dev",
    "site:prod": "yarn workspace @mintter/site build",
    "site:serve": "yarn workspace @mintter/site serve",
    "site:test": "yarn test --filter=!@mintter/desktop",
    "desktop": "yarn workspace @mintter/desktop dev",
    "desktop:make": "yarn workspace @mintter/desktop make",
    "desktop:package": "yarn workspace @mintter/desktop package",
    "desktop:publish": "yarn workspace @mintter/desktop publish",
    "desktop:test": "yarn test --filter=!@mintter/site",
    "desktop:devtools": "yarn workspace @mintter/desktop devtools",
    "ui:dev": "cd frontend/apps/storybook && yarn dev",
    "ui-sb": "cd frontend/apps/storybook && yarn dev",
    "ui-watch": "cd frontend/packages/ui && yarn watch",
    "sb:build": "cd frontend/apps/storybook && yarn build-storybook",
    "watch": "yarn workspaces foreach -pi run watch",
    "postinstall": "yarn check-deps && yarn build",
    "fix": "manypkg fix",
    "build": "yarn workspaces foreach --exclude @mintter/site --exclude @mintter/desktop --exclude @mintter/desktop --exclude @mintter/docs -pi run build",
    "upgrade:tamagui": "yarn up '*tamagui*'@latest '@tamagui/*'@latest react-native-web-lite@latest",
    "check-deps": "check-dependency-version-consistency .",
    "docs": "yarn workspace @mintter/docs start"
  },
  "repository": "github:mintterteam/mintter",
  "resolutions": {
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "react-refresh": "^0.14.0",
    "react-native-svg": "13.9.0",
    "react-native-web": "~0.19.6",
    "@babel/core": "^7.20.2",
    "babel-loader": "^8.3.0"
  },
  "packageManager": "yarn@3.6.1",
  "workspaces": [
    "frontend/apps/*",
    "frontend/packages/*",
    "docs"
  ],
  "dependencies": {
    "@babel/runtime": "^7.18.9",
    "@bufbuild/protoc-gen-connect-es": "0.13.0",
    "@bufbuild/protoc-gen-es": "1.3.1",
    "@manypkg/cli": "0.19.2",
    "@nderscore/tamagui-typescript-plugin": "0.5.4",
    "@tamagui/cli": "1.69.0",
    "check-dependency-version-consistency": "4.1.0",
    "cross-env": "7.0.3",
    "electron-squirrel-startup": "1.0.0",
    "eslint": "8.47.0",
    "graphql-codegen": "0.4.0",
    "node-gyp": "^9.3.1",
    "prettier": "3.0.2",
    "sort-package-json": "2.5.1",
    "tamagui": "1.69.0",
    "ts-node": "10.9.1",
    "turbo": "1.10.14",
    "typescript": "5.1.6"
  },
  "devDependencies": {
    "@storybook/nextjs": "^7.0.26",
    "babel-plugin-react-native-web": "^0.19.9",
    "concurrently": "8.2.1"
  }
}
