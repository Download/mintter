{
  "name": "mintter",
  "private": true,
  "scripts": {
    "ui:dev": "yarn workspace @mintter/ui dev",
    "site": "yarn workspace @mintter/site dev",
    "site:extract": "EXTRACT=1 yarn workspace @mintter/site dev",
    "site:prod": "yarn build && yarn workspace @mintter/site build",
    "site:vercel": "yarn build && cd frontend/apps/site && yarn build",
    "site:prod:serve": "yarn workspace @mintter/site serve",
    "desktop": "yarn workspaces foreach --exclude @mintter/site --exclude @mintter/electron -pi run dev",
    "desktop:extract": "EXTRACT=1 yarn workspace @mintter/desktop dev:extract",
    "desktop:prod": "yarn workspace @mintter/desktop build",
    "docs": "yarn workspace @mintter/docs start",
    "e2e": "playwright test",
    "tauri:dev": "cd desktop/app && cargo tauri dev",
    "fix": "manypkg fix",
    "build": "yarn workspaces foreach --exclude @mintter/site --exclude @mintter/desktop --exclude @mintter/electron --exclude @mintter/docs -pi run build",
    "upgrade:tamagui": "manypkg upgrade tamagui && manypkg upgrade @tamagui && manypkg upgrade tamagui-loader && manypkg upgrade react-native-web-lite",
    "format": "prettier --write ./frontend",
    "test": "yarn workspaces foreach run test",
    "d2:dev": "yarn workspace @mintter/electron dev"
  },
  "resolutions": {
    "@types/react-native": "0.70.8",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "react-refresh": "0.14.0",
    "react-native-svg": "13.4.0",
    "react-native-web": "0.18.9",
    "@floating-ui/react-dom": "1.2.2",
    "@floating-ui/react": "0.19.1",
    "@floating-ui/react-native": "0.9.0"
  },
  "devDependencies": {
    "@babel/runtime": "7.18.9",
    "@bufbuild/protoc-gen-connect-web": "0.8.6",
    "@bufbuild/protoc-gen-es": "1.2.0",
    "@manypkg/cli": "0.19.2",
    "@playwright/test": "^1.32.3",
    "@types/react-window": "^1.8.5",
    "cross-env": "7.0.3",
    "eslint": "8.38.0",
    "graphql-codegen": "0.4.0",
    "prettier": "2.8.7",
    "ts-node": "10.9.1",
    "typescript": "4.9.5"
  },
  "packageManager": "yarn@3.5.1",
  "workspaces": [
    "frontend/apps/*",
    "frontend/packages/*",
    "frontend/e2e",
    "docs"
  ],
  "dependencies": {
    "react-window": "^1.8.9"
  }
}
