{
  "compilerOptions": {
    "strictNullChecks": true,
    "noUncheckedIndexedAccess": true,
    "paths": {
      "@mintter/app/*": ["./frontend/packages/app/src/*"],
      "@mintter/ui/*": ["./frontend/packages/ui/*"],
      "@mintter/shared/*": ["./frontend/packages/shared/*"],
      "react-native": ["./node_modules/react-native-web"],
    },
    "plugins": [
      {
        // docs: https://github.com/nderscore/tamagui-typescript-plugin#readme
        "name": "@nderscore/tamagui-typescript-plugin",
        "pathToApp": "frontend/apps/site"
      },
      {
        // docs: https://github.com/nderscore/tamagui-typescript-plugin#readme
        "name": "@nderscore/tamagui-typescript-plugin",
        "pathToApp": "frontend/apps/desktop"
      }
    ]
  },
  // "extends": "expo/tsconfig.base"
}